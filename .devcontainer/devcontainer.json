{
  "name": "Python App Dev Container",
  "build": {
    "dockerfile": "../app/Dockerfile"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter"
  ],
  "forwardPorts": [7860],
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "root"
}